<extension type="component" version="3.4" method="upgrade">
    <name>cedthumbnails</name>
    <creationDate>2016-12-31</creationDate>
    <author>Galaxiis</author>
    <authorEmail>galaxiiscom@gmail.com</authorEmail>
    <authorUrl>www.galaxiis.com</authorUrl>

    <copyright>Copyright (C) 2013-2016 galaxiis.com All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL 3.0</license>

    <version>2.9.2</version>

    <description>Related/popular/latest posts with thumbnails for Joomla. 3 modules and 1 plugin Extensions. </description>
    <languages folder="language/en-GB">
        <language tag="en-GB">en-GB.com_cedthumbnails.ini</language>
    </languages>

    <media destination="com_cedthumbnails" folder="media/com_cedthumbnails">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
        <filename>index.html</filename>
    </media>
    <files folder="components/com_cedthumbnails">
        <filename>index.html</filename>
        <folder>helpers</folder>
    </files>
    <administration>
        <menu link="option=com_cedthumbnails">cedThumbnails</menu>
        <submenu>
            <menu view="liveupdate" img="../media/com_cedthumbnails/images/live-update.png">Live Update</menu>
        </submenu>
        <files folder="administrator/components/com_cedthumbnails">
            <filename>controller.php</filename>
            <filename>cedthumbnails.php</filename>
            <filename>config.xml</filename>
            <filename>index.html</filename>
            <folder>views</folder>
            <folder>liveupdate</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>controllers</folder>
        </files>
        <languages folder="administrator/language/en-GB">
            <language tag="en-GB">en-GB.com_cedthumbnails.ini</language>
        </languages>
    </administration>

</extension>