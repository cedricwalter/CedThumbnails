<?xml version="1.0" encoding="UTF-8"?>
<extension
        type="module"
        version="2.5"
        client="site"
        method="upgrade">
    <name>Popular Articles with thumbnails</name>
    <element>mod_articles_popular_thumb</element>
    <author>Cedric Walter</author>
    <creationDate>August 2011</creationDate>
    <copyright>Copyright (C) 2011 Cedric Walter. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>cedric.walter@gmail.com</authorEmail>
    <authorUrl>www.waltercedric.com</authorUrl>
    <version>2.5.7</version>
    <description>DESCMOSTREAD</description>

    <languages>
        <language tag="en-GB">en-GB.mod_articles_popular_thumb.ini</language>
        <language tag="en-GB">en-GB.mod_articles_popular_thumb.sys.ini</language>
    </languages>

    <media>
        <folder>mod_articles_popular_thumb</folder>
    </media>

    <files>
        <filename module="mod_articles_popular_thumb">helper.php</filename>
        <filename module="mod_articles_popular_thumb">index.html</filename>
        <filename module="mod_articles_popular_thumb">mod_articles_popular_thumb.php</filename>
        <folder>tmpl</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="catid"
                        type="category"
                        extension="com_content"
                        multiple="true"
                        size="10"
                        default=""
                        required="true"
                        label="JCATEGORY"
                        description="MOD_POPULAR_FIELD_CATEGORY_DESC">
                    <option value="">JOPTION_ALL_CATEGORIES</option>
                </field>

                <field name="show_front" type="radio" default="1" label="Frontpage Items"
                       description="PARAMFRONTPAGEITEMS">
                    <option value="1">show</option>
                    <option value="0">hide</option>
                </field>
                <field name="count" type="text" default="5" required="true" label="Count" description="PARAMCOUNT"
                       size="2"/>


            </fieldset>
            <fieldset name="Thumbnails" label="Thumbnails">

                <field name="useJIMage" type="radio" default="1" label="Use Joomla 2.5 JIMage"
                       description="Only apply to Joomla 2.5. If you are using Joomla 2.5, the build in library JImage can be used instead of wideImage, Attention JIMage do not support thumbnails of remote images other than your site!">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="useThumbnails" type="radio" default="1" label="Use Thumbnails" description="USETHUMBNAILS">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

                <field name="originThumbnails" type="list" default="1" size="4"
                       label="Thumbnails source" description="USEIMAGESTHUMBNAILSDESC">
                    <option value="1">search in intro text only</option>
                    <option value="2">search in full text only</option>
                    <option value="3">search in intro text but if not found try in full text</option>
                    <option value="4">search in full text but if not found try in intro text</option>
                </field>

                <field name="thumbnailWidth" type="text" default="70" label="Width"
                       description="you can try 250x100 or use square width x height" required="true" size="3"/>
                <field name="thumbnailHeight" type="text" default="70" label="Height"
                       description="THUMBNAILHEIGHT" required="true" size="3"/>

                <field name="defaultImage" type="text"
                       default="/media/plg_content_relatedthumbitems/default.jpg" size="20"
                       required="true"
                       label="Default" description="Default image thumbnail when no image is found"/>

            </fieldset>
            <fieldset name="Text" label="Text">


                <field name="useTitle" type="radio" default="1" label="Use Title" description="Use Title">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

                <field name="titleLength" type="text" default="15" required="true" label="Title Size"
                       description="Number of Characters to be trimmed from title"
                       size="3"/>


                <field name="useTeaser" type="radio" default="1" label="Introduction Text" description="USETEASER">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </field>

                <field name="teaserEnding" type="text" required="false" default="" label="Title/Text ending"
                       description="TEASERENDING"
                       size="20"/>

                <field name="teaserLength" type="text" default="60" required="true" label="Text Size"
                       description="Number of Characters to be trimmed from introduction text"
                       size="3"/>


                <field name="matrixSize" type="text" default="3" required="true" label="Matrix layout"
                       description="Number of images per line"
                       size="2"/>


            </fieldset>
            <fieldset
                    name="advanced">

                <field
                        name="layout"
                        type="modulelayout"
                        label="Style"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>

                <field
                        name="moduleclass_sfx"
                        type="text"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                        description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>

                <field
                        name="cachemode"
                        type="hidden"
                        default="static">
                    <option
                            value="static"></option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>

