<plugin>
    <artifactId>maven-antrun-plugin</artifactId>
    <version>1.3</version>
    <executions>
        <execution>
            <phase>process-resources</phase>
            <configuration>
                <tasks>
                    <copy todir="${project.build.directory}/target">
                        <fileset dir="${basedir}/${project.artifactId}">
                            <include name="**/*.php"/>
                            <include name="**/*.xml"/>
                            <include name="**/*.png"/>
                            <include name="**/*.html"/>
                        </fileset>
                        <flattenmapper/>
                    </copy>
                </tasks>
            </configuration>
            <goals>
                <goal>run</goal>
            </goals>
        </execution>
    </executions>
</plugin>